<html>
  <body
    style="background-color:#fbfbfb;font-family: Open Sans, sans-serif;font-size:100%;font-weight:400;line-height:1.4;color:#000;">
    <table
      style="min-width:650px;margin:50px auto 10px;background-color:#fff;padding:50px;-webkit-border-radius:3px;-moz-border-radius:3px;border-radius:3px;-webkit-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);-moz-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); border-top: solid 10px #88b433;">
      <thead>
        <tr>
          <th style="text-align:left;">
            <img style="max-width: 80px;height:70px" src="{{logoUrl}}" alt="Tilitso Logo">
          </th>
          <th style="text-align:right;font-weight:bold;font-size: 14px;">{{date}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="height:35px;"></td>
        </tr>
        <tr>
          <td style="width:50%;padding:2px;vertical-align:top">
            <p style="margin:0 0 10px 0;padding:0;font-size:14px;">
              <span style="display:block;font-weight:bold;font-size:14px">Name</span> {{customerName}}
            </p>
          </td>
          <td style="width:50%;padding:2px;vertical-align:top">
            <p style="margin:0 0 10px 0;padding:0;font-size:14px;">
              <span style="display:block;font-weight:bold;font-size:14px;">Email</span> {{email}}
            </p>
          </td>
        </tr>
        <tr>
          <td colspan="2" style="border: solid 1px #ddd; padding:10px 20px;">
            <p style="font-size:14px;margin:0 0 6px 0;">
              <span style="font-weight:bold;display:inline-block;min-width:150px">Order status</span>
              <b style="color:green;font-weight:normal;margin:0">Success</b>
            </p>
            <p style="font-size:14px;margin:0 0 6px 0;">
              <span style="font-weight:bold;display:inline-block;min-width:146px">Order ID</span> {{orderNo}}
            </p>
            <p style="font-size:14px;margin:0 0 0 0;">
              <span style="font-weight:bold;display:inline-block;min-width:146px">Order amount</span> Rs. {{grandTotal}}
            </p>
            <p style="font-size:14px;margin:0 0 6px 0;">
              <span style="font-weight:bold;display:inline-block;min-width:146px">Phone No</span> {{phoneNo}}
            </p>
            <p style="font-size:14px;margin:0 0 0 0;">
              <span style="font-weight:bold;display:inline-block;min-width:146px">Shipping Address</span> {{shippingAddress}}
            </p>
          </tbody>
    </table>
  </body>
</html>
