{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@db/*": [
        "src/db/pickbazar/*"
      ],
      "@addresses/*": [
        "src/addresses/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@categories/*": [
        "src/categories/*"
      ],
      "@products/*": [
        "src/products/*"
      ],
      "@shops/*": [
        "src/shops/*"
      ],
      "@notifications/*": [
        "src/notifications/*"
      ],
      "@permission/*": [
        "src/permission/*"
      ]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}